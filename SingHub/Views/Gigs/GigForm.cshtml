@model SingHub.ViewModel.GigFormViewModel
@{
    ViewBag.Title = Model.Heading;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Heading</h2>

@using (Html.BeginForm(Model.Action, "Gigs"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(g => g.Id)
    <div class="form-group">
        @Html.LabelFor(g => g.Venue)
        @Html.TextBoxFor(g => g.Venue, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Date)
        @Html.TextBoxFor(g => g.Date, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Time)
        @Html.TextBoxFor(g => g.Time, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Genre)
        @Html.DropDownListFor(g => g.Genre, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Genre)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg">Save</button>
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}